{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://gql.twitch.tv/gql"
        }
      ]
    },
    "fs:allow-appcache-read-recursive",
    {
        "identifier": "opener:allow-open-path",
        "allow": [
            {
                "path": "$APPCACHE/vods"
            }
        ]
    }
  ]
}
