{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bettervods-rs",
  "version": "0.2.3",
  "identifier": "bettervods",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "bettervods-rs",
        "width": 1220,
        "height": 675,
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
      "enable": true,
      "scope": {
        "requireLiteralLeadingDot": false,
        "allow": ["**/*"]
      }
    }
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
            "../public/Patreon.svg",
            "../public/Github.svg"
    ]
  },
  "plugins": {
    "updater": {
      "dialog": true,
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY1QUVGQUIyREQ3QjlBRDIKUldUU21udmRzdnF1WlFJNFlkL3pzNUE4c0QzaFpXSWRzNDBNOXJseHpucVRncnBHOUlTcDUvazMK",
      "endpoints": [
        "https://raw.githubusercontent.com/nerdyfitzy/bettervods-rs/refs/heads/release/.github/latest.json"
      ]
    }
    }
}
